<div x-data="notificationApp()" x-init="init()">
    <!-- Notification Tailwind -->
    <div x-show="open" x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 transform scale-90" x-transition:enter-end="opacity-100 transform scale-100"
        x-transition:leave="transition ease-in duration-300" x-transition:leave-start="opacity-100 transform scale-100"
        x-transition:leave-end="opacity-0 transform scale-90" :class="toastColor"
        class="fixed top-4 right-4 z-50 p-4 rounded-md text-white shadow-lg flex items-center space-x-2"
        @click="closeToast()">
        <span class="text-xl" :class="toastIcon"></span>
        <p x-text="toastMessage" class="title-font"></p>
    </div>

    <div class="p-2 md:p-6 mx-auto space-y-6">
        <h1 class="text-2xl text-center title-font mb-4">Le club</h1>

        <div class="flex justify-end items-center mb-4">
            <a href="/admin/club/edit/1"
                class="px-6 py-3 w-42 md:w-32 md:w-auto bg-line-blue text-white rounded-lg hover:bg-blue-600 title-font transition">Modifier le club</a>
        </div>

        <div>
            <label for="adress" class="block text-sm title-font">Adresse</label>
            <input type="text" name="adress" id="adress" value="<%= club.adress %>"
                class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue" disabled>
        </div>

        <div>
            <label for="addressDetails" class="block text-sm title-font">Complément d'adresse</label>
            <input type="text" name="addressDetails" id="addressDetails" value="<%= club.addressDetails %>"
                class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue" disabled>
        </div>

        <div class="w-full flex space-x-4">
            <div class="w-1/2">
                <label for="cp" class="block text-sm title-font">Code postal</label>
                <input type="text" name="cp" id="cp" value="<%= club.cp %>"
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue" disabled>
            </div>
        
            <div class="w-1/2">
                <label for="city" class="block text-sm title-font">Ville</label>
                <input type="text" name="city" id="city" value="<%= club.city %>"
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue" disabled>
            </div>
        </div>
        
        <div class="w-full flex space-x-4">
            <div class="w-1/2">
                <label for="mail" class="block text-sm title-font">E-mail</label>
                <input type="text" name="mail" id="mail" value="<%= club.mail %>"
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue" disabled>
            </div>

            <div class="w-1/2">
                <label for="phone" class="block text-sm title-font">Téléphone</label>
                <input type="text" name="phone" id="phone" value="<%= club.phone %>"
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue" disabled>
            </div>
        </div>
        
        <div class="w-full flex space-x-4">
            <div class="w-1/2">
                <label for="imageComite" class="block text-sm title-font">Image du comité directeur</label>
                <img src="<%= club.committee_image %>" alt="Image du comité directeur" class="mt-1 h-56 w-full object-contain">
            </div>
        
            <div class="w-1/2">
                <label for="roomImage" class="block text-sm title-font">Image de la salle</label>
                <img src="<%= club.room_image %>" alt="Image de la salle du club" class="mt-1 h-56 w-full object-contain">
            </div>
        </div>
    </div>
</div>