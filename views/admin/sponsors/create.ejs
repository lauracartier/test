<div class="p-2 md:p-8 mx-auto">
    <button onclick="history.back()" class=" top-10 mb-6 text-line-blue">
      <i class="fas fa-arrow-left"></i> Retour
    </button>
  <h1 class="text-2xl title-font mb-6 text-center">Créer un partenaire</h1>
  <form action="/admin/sponsors/create" method="POST" enctype="multipart/form-data" class="space-y-6 validate-form" novalidate
    id="partnerForm">
    <!-- Champ pour le nom -->
    <div>
      <label for="name" class="block text-sm title-font">Nom <span class="text-line-red">*</span></label>
      <input type="text" name="name" id="name" required
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue">
      <span class="text-line-red text-sm hidden" id="nameError">Veuillez renseigner ce champ.</span>
    </div>

    <!-- Champ pour le téléchargement d'image -->
    <div>
      <label for="image" class="block text-sm title-font">Image <span
          class="text-line-red">*</span></label>
      <input type="file" name="image" id="image" required accept="image/*"
        class="mt-1 block w-full text-sm file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:bg-blue-50 file:text-line-blue hover:file:bg-blue-100">
      <span class="text-line-red text-sm hidden" id="imageError">Veuillez ajouter une image valide.</span>
    </div>

    <!-- Champ pour le lien -->
    <div>
      <label for="link" class="block text-sm title-font">Lien</label>
      <input type="url" name="link" id="link"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-line-blue focus:border-line-blue">
    </div>

    <!-- Bouton de soumission -->
    <button type="submit" class="bg-line-blue px-4 text-white py-3 rounded-lg">Créer</button>
  </form>
</div>