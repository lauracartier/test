<div class="flex flex-col lg:flex-row items-stretch gap-8 lg:gap-24 justify-center w-full px-4">
    <!-- Colonne Informations -->
    <% if (goelandClub) { %>
        <div class="space-y-14 w-full lg:w-auto">
            <div class="flex lg:self-start justify-center mt-3">
                <h1 class="text-line-blue">Contact</h1>
            </div>
            
            <div>
                <div class="flex items-center mb-4">
                    <i class="fas fa-map-marker-alt text-line-blue text-2xl mr-4"></i>
                    <div class="text-left">
                        <h3 class="text-xl title-font text-line-blue">Adresse</h3>
                        <p class="text-lg">
                            <%= goelandClub.addressDetails %>
                        </p>
                        <p class="text-lg">
                            <%= goelandClub.adress %>, <%= goelandClub.cp %>
                            <%= goelandClub.city %>
                        </p>
                    </div>
                </div>

                <div class="flex items-center mb-4">
                    <i class="fas fa-phone-alt text-line-blue text-2xl mr-4"></i>
                    <div class="text-left">
                        <h3 class="text-xl title-font text-line-blue">Téléphone</h3>
                        <a href="tel:<%= goelandClub.phone %>" target="_blank" class="text-lg hover:underline">
                            <%= goelandClub.phone %>
                        </a>
                    </div>
                </div>

                <div class="flex items-center">
                    <i class="fas fa-envelope text-line-blue text-2xl mr-4"></i>
                    <div class="text-left">
                        <h3 class="text-xl title-font text-line-blue">Mail</h3>
                        <a class="hover:underline text-lg" href="mailto:<%= goelandClub.mail %>">
                            <%= goelandClub.mail %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Colonne Carte Google Maps -->
    <div class="w-full lg:w-[600px] xl:w-[800px] h-full mt-8 lg:mt-0">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5789.439757800038!2d-1.5487594234519095!3d43.487315963143445!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd516ac6bf271ccd%3A0xa17e1e6f40386e48!2sGo%C3%AAlands%20de%20Biarritz!5e0!3m2!1sfr!2sfr!4v1730845154948!5m2!1sfr!2sfr"
            width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
</div>
